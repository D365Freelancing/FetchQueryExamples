<fetch>
  <entity name="solutioncomponent">
    <link-entity name="solution" from="solutionid" to="solutionid">
      <attribute name="description" />
      <attribute name="uniquename" />
      <attribute name="friendlyname" />
      <filter>
        <condition attribute="friendlyname" operator="eq" value="D365 Freelancing" />
      </filter>
    </link-entity>
    <link-entity name="role" from="roleid" to="objectid">
      <attribute name="name" />
    </link-entity>
  </entity>
</fetch>